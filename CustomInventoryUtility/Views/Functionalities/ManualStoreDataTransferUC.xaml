<UserControl
    x:Class="InventoryUtility.Views.Functionalities.ManualStoreDataTransferUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:InventoryUtility.Views.Functionalities"
    mc:Ignorable="d" 
    d:DesignHeight="450"
    d:DesignWidth="800"
    d:Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBlock d:Text="Functionality" Text="{Binding Description}" FontWeight="SemiBold"/>
        <DatePicker Grid.Row="2" FontSize="18"
                    Text="{Binding SelectedDate, Mode=TwoWay}"/>
    </Grid>
</UserControl>
